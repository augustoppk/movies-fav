model Genre {
  id        String   @id @default(uuid())
  name      String   @unique
  movies    Movie[]
  createdAt DateTime @default(now())
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String?
  releaseYear Int?
  isFavorite  Boolean  @default(false)
  genreId     String
  genre       Genre    @relation(fields: [genreId], references: [id])
  createdAt   DateTime @default(now())
}
